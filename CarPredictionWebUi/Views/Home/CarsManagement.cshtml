@model IEnumerable<PredictionRequest>
@{ var loggedIn = true; }
@if (loggedIn)
{
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                <tr>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Horse Power</th>
                    <th>Fuel</th>
                    <th>Mileage</th>
                    <th>Transmission</th>
                    <th>Price</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Model</td>
                            <td>@item.Year</td>
                            <td>@item.HorsePower</td>
                            <td>@item.Fuel</td>
                            <td>@item.Mileage</td>
                            <td>@item.Transmission</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <h1>You don't have the rights to access this page. Firstly you have to be logged in.</h1>
}


<script>
    @loggedIn = window.localStorage.getItem('Auth') !== null;
</script>