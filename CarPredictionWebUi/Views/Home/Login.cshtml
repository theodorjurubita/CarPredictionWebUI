<form id="loginForm" onsubmit="login()">
    <div class="container">
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h1>Login</h1>
                    <div id="Login">
                        <div class="form-group">
                            <input id="inputUsername"
                                   class="form-control"
                                   type="text"
                                   placeholder="Username"
                                   required/>
                        </div>
                        <div class="form-group">
                            <input id="inputPassword"
                                   class="form-control"
                                   type="password"
                                   placeholder="Password"
                                   required
                                   minLength="3"/>
                        </div>
                        <button class="btn btn-info" type="submit">Login</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    function login() {
        var username = document.getElementById("inputUsername").value;
        var password = document.getElementById("inputPassword").value;
        var credentials = { "username": username, "password": password };
        var uri = "/api/users/authenticate";
        $.ajax({
            xhrFields: {
                withCredentials: true
            },
            beforeSend: function(xhr) {
                xhr.setRequestHeader('Authorization', 'Basic ' + btoa(username + ':' + password));
            },
            type: "POST",
            accepts: "application/json",
            url: uri,
            contentType: "application/json",
            data: JSON.stringify(credentials),
            error: function(jqXHR, textStatus, errorThrown) {
                window.swal("Authentication", "Wrong username or password!", "error");
            },
            success: function(result) {
                window.localStorage.setItem("UserAuth", result);
                window.swal("Authentication", "You successfully logged in as '" + username + "'", "success")
                    .then(() => {
                        window.location.href = 'https://localhost:44391/';
                    });
                //alert("Successfully logged in as "+username);
            }
        });
    }

    $('#loginForm').submit((e) => {
        e.preventDefault();
    });
</script>

